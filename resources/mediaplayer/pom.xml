            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.mobicents.media.codecs</groupId>
            <artifactId>g711</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.mobicents.media.codecs</groupId>
